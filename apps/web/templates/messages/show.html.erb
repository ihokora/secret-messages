<div class="jumbotron">
  <h3>Your Secret-Self-Destruct Message</h3>
  <% unless message.nil? %>
    <div id="message">
        <div class="message">
          <p><%= message_decrypted_text %></p>
          <p><%= message_destruction_info %></p>
          <p><%= link_to 'Link to this message', message_private_link %></p>
        </div>
    </div>
  <% else %>
    <p class="placeholder">Nothing is here... This message has been destroyed or never existed</p>
  <% end %>
